<% if (title) { %><% } %>

<h1 class="centered-title"><%= title %></h1>
<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="account-management-container centered-content">
  <% if (locals.accountData) { %>
  <div class="welcome-message">
    <h2 class="welcome-text">
      Welcome <%= locals.accountData.account_firstname %>
    </h2>

    <!-- Update Account Link for all users -->
    <div class="management-actions">
      <a
        href="/account/update/<%= locals.accountData.account_id %>"
        class="btn btn-primary"
      >
        Update Account Information
      </a>
    </div>

    <!-- Inventory Management for Employees/Admins only -->
    <% if (locals.accountData.account_type === 'Employee' ||
    locals.accountData.account_type === 'Admin') { %>
    <div class="inventory-management">
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" class="btn btn-secondary"
          >Access Inventory Management</a
        >
      </p>
    </div>
    <% } %>
  </div>
  <% } else { %>
  <div class="welcome-message">
    <h2 class="welcome-text">You're logged in!</h2>
    <p class="welcome-subtext">Welcome to your account management page.</p>
  </div>
  <% } %>
</div>
